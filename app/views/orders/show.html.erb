<div class="container">
  <div class="row py-4">
    <div class="col-md-3"><img class="d-block w-100" src="https://picsum.photos/id/1027/500/300" alt="Book"></div>
    <div class="col">
      <h1>Order #<%= @order.id %> <small><span class="badge badge-primary"><%= @order.state %></span></small></h1>
      <ul class="list-unstyled">
        <li><strong>ISSUED ON</strong> <%= @order.created_at.to_date %></li>
        <li><strong>TEDDY</strong> <%= @order.book.name %> [<%= @order.book_sku %>]</li>
        <li><strong>TOTAL</strong> <%= humanized_money_with_symbol @order.amount %></li>
        </li>
      </ul>
      <p>Estimated delivery in <strong><%= @order.book.delivery_estimate %> business days</strong></p>
    </div>
  </div>
</div>