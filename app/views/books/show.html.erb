<div class="book-show">
    <div class= "container">
        <h1 class="show-title"><%= @book.name %></h1>
        <div class="row details">
        <div class="col-sm-12 col-md-12 col-lg-6 col-xl-6">
            <img class="d-block w-100" src="https://picsum.photos/id/1027/500/300" alt="Book">
        </div>

        <div class="col-sm-12 col-md-12 col-lg-6 col-xl-6 description">
            <div class="d-flex align-items-center p-3 ">
                <p><%= @book.description %></p>
            </div>
            <div class="price-details d-flex justify-content-around">
                <p>Â£ <%= @book.price %></p>
                <p>Delivery estimate: <%= @book.delivery_estimate %> days</p>
            </div>
            <%= simple_form_for (@order) do |f| %>
                <%= f.input :booking_date, as: :string, required: false, class: "datepicker" %>
                <%= f.button :submit %>
            <% end %> 
        </div>
    </div>

</div>